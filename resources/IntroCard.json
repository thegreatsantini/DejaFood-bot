{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "Image",
            "url": "https://aka.ms/bf-welcome-card-image",
            "size": "stretch"
        },
        {
            "type": "TextBlock",
            "spacing": "medium",
            "size": "default",
            "weight": "bolder",
            "text": "Welcome to Recipe Bot!",
            "wrap": true,
            "maxLines": 0
        },
        {
            "type": "TextBlock",
            "size": "default",
            "isSubtle": true,
            "text": "Type in indgredients to find fun new recipes",
            "wrap": true,
            "maxLines": 0
        }
    ]
}